<mvc:View
    controllerName="project1.controller.TestView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
              <MessageStrip id="idMessageStrip"
				text="{i18n>messageStripText}"
				type="Warning"
				enableFormattedText="true"
				showIcon="true"
				showCloseButton="false"
				class="sapUiMediumMarginBottom">
			</MessageStrip>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
